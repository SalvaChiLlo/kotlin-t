<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.kotlin_t.trobify.presentacion.home.HomeFragment"
        android:label="@string/inicio_titulo"
        tools:layout="@layout/fragment_home"
        app:startDestination="@id/action_nav_home_to_ordenacionFragment">
        <action
            android:id="@+id/action_nav_home_to_filtrarFragment"
            app:destination="@id/filtrarFragment" />
        <action
            android:id="@+id/action_nav_home_to_ordenacionFragment"
            app:destination="@id/ordenacionFragment" />
        <action
            android:id="@+id/action_nav_home_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_nav_home_to_busquedaFragment"
            app:destination="@id/busquedaFragment" />
        <action
            android:id="@+id/action_nav_home_to_loginFragment"
            app:destination="@id/nav_login" />
        <action
            android:id="@+id/action_nav_home_to_editorFichaFragment"
            app:destination="@id/editorFichaFragment" />/>
        <action
            android:id="@+id/action_nav_home_self"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_home_to_misInmueblesFragment"
            app:destination="@id/nav_mis_inmuebles" />
        <action
            android:id="@+id/action_nav_home_to_misInmueblesFragment2"
            app:destination="@id/nav_mis_inmuebles"
            app:popUpTo="@id/nav_home" />
        <action
            android:id="@+id/action_nav_home_to_fichaFragment"
            app:destination="@id/fichaFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_favoritos"
        android:name="ListaFavoritosFragment"
        android:label="Mis Favoritos" >
        <action
            android:id="@+id/action_nav_favoritos_to_recuperarFavoritosFragment"
            app:destination="@id/recuperarFavoritosFragment" />
        <action
            android:id="@+id/action_nav_favoritos_to_fichaFragment"
            app:destination="@id/fichaFragment" />
    </fragment>
    <fragment
        android:id="@+id/filtrarFragment"
        android:name="com.kotlin_t.trobify.presentacion.filtrar.FiltrarFragment"
        android:label="@string/filtrar_titulo">
        <action
            android:id="@+id/action_filtrarFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/ordenacionFragment"
        android:name="com.kotlin_t.trobify.presentacion.ordenacion.OrdenacionFragment"
        android:label="@string/ordenar_titulo">
        <action
            android:id="@+id/action_ordenacionFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.kotlin_t.trobify.presentacion.mapa.MapsFragment"
        android:label="@string/mapa"
        tools:layout="@layout/fragment_maps">
        <action
            android:id="@+id/action_mapsFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/busquedaFragment"
        android:name="com.kotlin_t.trobify.presentacion.busqueda.BusquedaFragment"
        android:label="Buscador"
        tools:layout="@layout/fragment_busqueda" >
        <action
            android:id="@+id/action_busquedaFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/editorFichaFragment"
        android:name="com.kotlin_t.trobify.presentacion.editorFicha.EditorFichaFragment"
        android:label="EditorFichaFragment"
        app:startDestination="@id/action_editorFichaFragment_to_nav_home">
        <action
            android:id="@+id/action_editorFichaFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <argument
            android:name="inmuebleID"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_editorFichaFragment_to_misInmueblesFragment"
            app:destination="@id/nav_mis_inmuebles"
            app:popUpTo="@id/nav_mis_inmuebles" />
    </fragment>
    <fragment
        android:id="@+id/nav_login"
        android:name="com.kotlin_t.trobify.presentacion.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_loginFragment_to_registrarseFragment"
            app:destination="@id/Registrarse" />
    </fragment>
    <fragment
        android:id="@+id/Registrarse"
        android:name="com.kotlin_t.trobify.presentacion.registrar.RegistrarseFragment"
        android:label="Crear Cuenta">
        <action
            android:id="@+id/action_registrarseFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_mis_inmuebles"
        android:name="com.kotlin_t.trobify.presentacion.misInmuebles.MisInmueblesFragment"
        android:label="MisInmueblesFragment" >
        <action
            android:id="@+id/action_misInmueblesFragment_to_editorFichaFragment"
            app:destination="@id/editorFichaFragment" />
        <action
            android:id="@+id/action_nav_mis_inmuebles_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_mi_cuenta"
        android:name="com.kotlin_t.trobify.presentacion.editarPerfil.EditarPerfilFragment"
        android:label="Mi Cuenta" >
        <action
            android:id="@+id/action_nav_mi_cuenta_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/recuperarFavoritosFragment"
        android:name="com.kotlin_t.trobify.presentacion.recuperarFavoritos.RecuperarFavoritosFragment"
        android:label="RecuperarFavoritosFragment" >
        <action
            android:id="@+id/action_recuperarFavoritosFragment_to_fichaFragment"
            app:destination="@id/fichaFragment" />
    </fragment>
    <fragment
        android:id="@+id/fichaFragment"
        android:name="com.kotlin_t.trobify.presentacion.ficha.FichaFragment"
        android:label="fragment_ficha"
        tools:layout="@layout/fragment_ficha" >
        <action
            android:id="@+id/action_fichaFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <argument
            android:name="inmuebleId"
            app:argType="integer" />
    </fragment>
    <!---Añadir acciones hacia atrás-->
</navigation>