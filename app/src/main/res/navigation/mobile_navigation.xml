<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.kotlin_t.trobify.presentacion.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_filtrarFragment"
            app:destination="@id/filtrarFragment" />
        <action
            android:id="@+id/action_nav_home_to_fichaFragment"
            app:destination="@id/fichaFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_favoritos"
        android:name="ListaFavoritosFragment"
        android:label="Mis Favoritos" />
    <fragment
        android:id="@+id/filtrarFragment"
        android:name="com.kotlin_t.trobify.presentacion.filtrar.FiltrarFragment"
        android:label="FiltrarFragment" >
        <action
            android:id="@+id/action_filtrarFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/fichaFragment"
        android:name="com.kotlin_t.trobify.presentacion.ficha.FichaFragment"
        android:label="Ficha">
        <argument
            android:name="InmuebleID"
            app:argType="integer" />
    </fragment>
    <!---Añadir acciones hacia atrás-->
</navigation>