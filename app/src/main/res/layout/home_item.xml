<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_imagen"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            tools:src="@drawable/_19669861"
            />

        <TextView
            android:id="@+id/home_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "Avenida Cardenal Benlloch, 106" />

        <TextView
            android:id="@+id/home_precio_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="300â‚¬/mes"/>
        <ImageView
            android:id="@+id/favorito_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_baseline_favorite_24">
        </ImageView>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
